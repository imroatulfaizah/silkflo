@model CalculationViewModel
@{
    ViewBag.Title = "Create";
}

<h2>Create</h2>

@using (Html.BeginForm("Calculate", "Home", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group">
            <label for="Expression">Enter the arithmetic expression:</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.Expression, new { htmlAttributes = new { @class = "form-control", placeholder = "Expression" } })
                @Html.ValidationMessageFor(model => model.Expression, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group" style="margin-top: 20px;">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" style="color:white; background-color:seagreen;" />
            </div>
        </div>
    </div>
}

@if (ViewBag.Result != null)
{
    <div class="alert alert-success mt-3">
        The result is: @ViewBag.Result
    </div>
}
@if (ViewBag.Memory != null)
{
    <div class="alert alert-info mt-3">
        The previous memory is: @ViewBag.Memory
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>